# Production Environment Variables
# AI Content Orchestrator

# Application
ENVIRONMENT=production
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-change-this
DEBUG=false

# Database
DATABASE_URL=sqlite:///./content_curator_prod.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=content_curator
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_ECHO=false

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# Email Configuration
EMAIL_VERIFICATION_TOKEN_EXPIRES_HOURS=24
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=noreply@content4u.ai

# YooKassa Configuration
YOOKASSA_SHOP_ID=1134145
YOOKASSA_SECRET_KEY=live_144m9a57yZytkuyh90IAiM0sQoF-L3SAyfB4hZMSDFk
YOOKASSA_WEBHOOK_SECRET=your-webhook-secret-here
YOOKASSA_TEST_MODE=false
YOOKASSA_RETURN_URL=https://content4u.ai/billing/success
YOOKASSA_CANCEL_URL=https://content4u.ai/billing/cancel

# Billing Configuration
BILLING_DEFAULT_TRIAL_DAYS=14
BILLING_AUTO_RENEW_ENABLED=true
BILLING_NOTIFICATIONS_ENABLED=true

# API Configuration
API_BASE_URL=https://content-curator-1046574462613.us-central1.run.app
CORS_ORIGINS=https://content4u.ai,https://www.content4u.ai

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,mp4,mp3

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
HEALTH_CHECK_ENABLED=true

# Telegram Bot Configuration (для публикации в каналы клиентов)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
# Получить токен: https://t.me/BotFather
# Примечание: Используется ОДИН бот для всех клиентов
# Клиенты добавляют бота в свои каналы как администратора
# Бот: @content4ubot (https://t.me/content4ubot)

# Social Media Integrations
# =====================================================

# Instagram Integration (через login/password с instagrapi)
# ВАЖНО: 2FA должна быть отключена на аккаунте Instagram
# Настройка: Instagram → Настройки → Безопасность → Отключить двухфакторную аутентификацию
# Примечание: Пользователи вводят свои логины/пароли через UI

# Twitter Integration (через OAuth 1.0a с tweepy)
# Получить ключи: https://developer.twitter.com/en/portal/dashboard
# Создайте Twitter App с правами Read and Write
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
# Примечание: Access tokens пользователи получают через OAuth flow

# Encryption for Social Tokens (ОБЯЗАТЕЛЬНО!)
# Используется для шифрования паролей Instagram и OAuth токенов Twitter
SOCIAL_TOKENS_ENCRYPTION_KEY=your-fernet-key-here
# Генерация нового ключа:
# python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ВАЖНО: НЕ МЕНЯЙТЕ КЛЮЧ ПОСЛЕ НАЧАЛА ИСПОЛЬЗОВАНИЯ - зашифрованные данные станут недоступны

