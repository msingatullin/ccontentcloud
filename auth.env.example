# Authentication System Configuration

# JWT Secret Key (обязательно для продакшна)
SECRET_KEY=your-super-secret-jwt-key-here

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Settings
FROM_EMAIL=noreply@goinvesting.ai
FROM_NAME=AI Content Orchestrator
BASE_URL=https://goinvesting.ai

# Database Configuration (если отличается от основной)
AUTH_DB_URL=sqlite:///auth.db

# Security Settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Email Verification
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# Development Settings
DEBUG_AUTH=false
LOG_AUTH_REQUESTS=true
